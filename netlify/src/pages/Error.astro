---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Error - Complete Chiropractic">
  <main class="min-h-screen flex items-center justify-center px-4 py-16">
    <div class="text-center">
      <h1 class="text-darkpurple text-6xl font-bold mb-4">404</h1>
      <h2 class="text-3xl font-semibold text-gray-800 mb-6">Page Not Found</h2>
      <p class="text-gray-600 text-lg mb-8">The page you're looking for doesn't exist or has been moved.</p>
      <a 
        href="/" 
        class="inline-flex items-center justify-center bg-primary hover:bg-[#bd3144] text-white px-6 py-3 rounded-2xl rounded-bl-none font-bold text-lg transition-colors duration-300"
      >
        <img src="/home.svg" alt="Home" class="h-5 mr-2" />
        Return Home
      </a>
    </div>
  </main>
</Layout>